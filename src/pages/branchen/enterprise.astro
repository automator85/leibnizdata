---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Enterprise Lösungen - Leibniz Data',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="title">
      Enterprise-Grade <span class="text-accent dark:text-white highlight">Lösungen</span>
    </Fragment>

    <Fragment slot="subtitle">
      Maßgeschneiderte Datenanalyse und Softwarelösungen für Großunternehmen. Wir verbinden Skalierbarkeit, Sicherheit und Innovation für Ihre unternehmensweiten Anforderungen.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Enterprise Solutions"
    subtitle="Umfassende Lösungen für komplexe Unternehmensanforderungen"
    items={[
      {
        title: 'Skalierbare Architekturen',
        description:
          'Hochverfügbare Systeme, die auch bei großen Datenmengen und hoher Nutzerlast zuverlässig funktionieren.',
        icon: 'tabler:server',
      },
      {
        title: 'Systemintegration',
        description:
          'Nahtlose Integration in bestehende IT-Landschaften und Legacy-Systeme.',
        icon: 'tabler:plug-connected',
      },
      {
        title: 'Data Governance',
        description:
          'Umfassende Datensicherheit und Compliance gemäß internationaler Standards und Regularien.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Business Intelligence',
        description:
          'Fortschrittliche Analysetools für unternehmensweite Datenauswertung und Reporting.',
        icon: 'tabler:chart-dots',
      },
      {
        title: 'Prozessautomatisierung',
        description:
          'Automatisierung komplexer Geschäftsprozesse durch KI und Machine Learning.',
        icon: 'tabler:robot',
      },
      {
        title: 'Enterprise Support',
        description:
          '24/7 Support und umfassende Service Level Agreements für geschäftskritische Systeme.',
        icon: 'tabler:headset',
      },
    ]}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Enterprise Implementation"
    items={[
      {
        title: 'Schritt 1: <span class="font-medium">Analyse & Planung</span>',
        description:
          'Umfassende Analyse Ihrer IT-Landschaft und Entwicklung einer maßgeschneiderten Implementierungsstrategie.',
        icon: 'tabler:search',
      },
      {
        title: 'Schritt 2: <span class="font-medium">Architektur & Design</span>',
        description:
          'Entwicklung einer skalierbaren Architektur unter Berücksichtigung aller Sicherheits- und Compliance-Anforderungen.',
        icon: 'tabler:architecture',
      },
      {
        title: 'Schritt 3: <span class="font-medium">Implementierung</span>',
        description:
          'Schrittweise Implementierung mit kontinuierlichen Tests und Qualitätssicherung.',
        icon: 'tabler:code',
      },
      {
        title: 'Schritt 4: <span class="font-medium">Roll-out & Support</span>',
        description:
          'Kontrollierter Roll-out und umfassender Support für den laufenden Betrieb.',
        icon: 'tabler:rocket',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    title="Enterprise Excellence"
    subtitle="Maximale Sicherheit und Skalierbarkeit für Ihr Unternehmen"
    items={[
      {
        title: 'Höchste Sicherheitsstandards',
        description:
          'Implementierung modernster Sicherheitstechnologien und Compliance-Mechanismen.',
      },
      {
        title: 'Globale Skalierbarkeit',
        description:
          'Weltweit verteilte Systeme mit hoher Verfügbarkeit und optimaler Performance.',
      },
      {
        title: 'Vollständige Integration',
        description:
          'Nahtlose Einbindung in Ihre bestehende IT-Infrastruktur und Geschäftsprozesse.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1563986768609-322da13575f3?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Enterprise Solutions',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Enterprise FAQ"
    subtitle="Antworten auf wichtige Fragen zu unseren Enterprise-Lösungen"
    items={[
      {
        title: 'Wie gewährleisten Sie die Sicherheit unserer Daten?',
        description:
          'Wir setzen auf mehrschichtige Sicherheitskonzepte, regelmäßige Security-Audits und modernste Verschlüsselungstechnologien. Alle Lösungen entsprechen den höchsten Sicherheitsstandards und Compliance-Anforderungen.',
      },
      {
        title: 'Wie erfolgt die Integration in bestehende Systeme?',
        description:
          'Unsere Experten analysieren Ihre bestehende IT-Landschaft und entwickeln eine maßgeschneiderte Integrationsstrategie. Durch standardisierte Schnittstellen und moderne Middleware-Lösungen gewährleisten wir eine nahtlose Integration.',
      },
      {
        title: 'Welchen Support bieten Sie?',
        description:
          'Wir bieten Enterprise-Support mit garantierten Reaktionszeiten, 24/7 Bereitschaft und persönlichen Ansprechpartnern. Unsere Service Level Agreements können individuell an Ihre Anforderungen angepasst werden.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Enterprise Beratung anfragen',
        href: '/kontakt',
        icon: 'tabler:calendar',
      },
    ]}
  >
    <Fragment slot="title">
      Bereit für Enterprise-Grade Lösungen?
    </Fragment>

    <Fragment slot="subtitle">
      Lassen Sie uns gemeinsam Ihre Enterprise-Anforderungen analysieren und die optimale Lösung entwickeln. Vereinbaren Sie jetzt ein Gespräch mit unseren Enterprise-Experten.
    </Fragment>
  </CallToAction>
</Layout>
