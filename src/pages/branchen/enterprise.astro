---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Enterprise Solutions',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Enterprise Solutions"
    title="Maßgeschneiderte Lösungen für Großunternehmen"
    subtitle="Wir unterstützen Großunternehmen bei der digitalen Transformation mit skalierbaren und sicheren Lösungen."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Unsere Enterprise Services"
    subtitle="Wir bieten umfassende Dienstleistungen für Großunternehmen"
    items={[
      {
        title: 'Enterprise Architektur',
        description:
          'Entwicklung einer skalierbaren Architektur und technischen Infrastruktur.',
        icon: 'tabler:building-arch',
      },
      {
        title: 'Digitale Transformation',
        description:
          'Begleitung bei der digitalen Transformation und Modernisierung bestehender Systeme.',
        icon: 'tabler:refresh',
      },
      {
        title: 'Skalierbare Lösungen',
        description:
          'Entwicklung hochskalierbarer Anwendungen für unternehmensweite Nutzung.',
        icon: 'tabler:arrows-maximize',
      },
      {
        title: 'Sicherheit & Compliance',
        description:
          'Implementation von Sicherheitsstandards und Compliance-Anforderungen.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'System Integration',
        description:
          'Integration verschiedener Systeme und Datenquellen in eine einheitliche Plattform.',
        icon: 'tabler:puzzle',
      },
      {
        title: 'Support & Wartung',
        description:
          'Umfassender Support und kontinuierliche Wartung der implementierten Lösungen.',
        icon: 'tabler:headset',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Skalierbare Architektur',
        description:
          'Unsere Enterprise-Lösungen basieren auf einer hochskalierbaren Architektur, die sich an Ihre wachsenden Anforderungen anpasst.',
      },
      {
        title: 'Sichere Integration',
        description:
          'Wir gewährleisten eine sichere Integration in Ihre bestehende IT-Infrastruktur unter Berücksichtigung aller Sicherheitsstandards.',
      },
      {
        title: 'Zukunftssicher',
        description:
          'Durch den Einsatz modernster Technologien und Standards entwickeln wir zukunftssichere Lösungen für Ihr Unternehmen.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Enterprise Lösungen',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Enterprise-grade Lösungen</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    items={[
      {
        title: 'Expertise',
        description:
          'Unser Team verfügt über jahrelange Erfahrung in der Entwicklung von Enterprise-Lösungen.',
      },
      {
        title: 'Modernste Technologien',
        description:
          'Wir setzen auf bewährte und innovative Technologien für maximale Performance und Skalierbarkeit.',
      },
      {
        title: 'Agile Entwicklung',
        description:
          'Durch agile Entwicklungsmethoden gewährleisten wir schnelle Anpassungen und kontinuierliche Verbesserungen.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1531973576160-7125cd663d86?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Enterprise Development',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Warum wir?</h3>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Ihr Weg zur digitalen Transformation"
    items={[
      {
        title: 'Analyse',
        description:
          'Wir analysieren Ihre bestehenden Systeme und definieren gemeinsam die Anforderungen.',
        icon: 'tabler:search',
      },
      {
        title: 'Konzeption',
        description:
          'Entwicklung einer maßgeschneiderten Lösung unter Berücksichtigung aller technischen und geschäftlichen Aspekte.',
        icon: 'tabler:template',
      },
      {
        title: 'Implementierung',
        description:
          'Agile Entwicklung und schrittweise Integration der neuen Lösung in Ihre bestehende Infrastruktur.',
        icon: 'tabler:code',
      },
      {
        title: 'Support',
        description:
          'Kontinuierliche Betreuung, Wartung und Weiterentwicklung der implementierten Lösung.',
        icon: 'tabler:headset',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1516321497487-e288fb19713f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Steps Enterprise',
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Bereit für die digitale Transformation?"
    subtitle="Kontaktieren Sie uns für ein unverbindliches Beratungsgespräch."
    actions={[
      {
        variant: 'primary',
        text: 'Kontakt aufnehmen',
        href: '/kontakt',
      },
    ]}
  />
</Layout>
