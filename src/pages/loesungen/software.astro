---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Softwareentwicklung',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Softwareentwicklung"
    title="Maßgeschneiderte Softwarelösungen"
    subtitle="Wir entwickeln innovative und skalierbare Softwarelösungen für Ihr Unternehmen."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Unsere Softwareentwicklung"
    subtitle="Wir bieten umfassende Dienstleistungen in der Softwareentwicklung"
    items={[
      {
        title: 'Architektur & Design',
        description:
          'Entwicklung skalierbarer Architekturen und technischer Infrastrukturen.',
        icon: 'tabler:building-arch',
      },
      {
        title: 'Agile Entwicklung',
        description:
          'Flexible und effiziente Entwicklung mit agilen Methoden.',
        icon: 'tabler:refresh',
      },
      {
        title: 'Cloud Solutions',
        description:
          'Entwicklung und Migration von Cloud-basierten Anwendungen.',
        icon: 'tabler:cloud',
      },
      {
        title: 'Mobile Apps',
        description:
          'Entwicklung nativer und hybrider mobiler Anwendungen.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Web Applications',
        description:
          'Entwicklung moderner und responsiver Webanwendungen.',
        icon: 'tabler:browser',
      },
      {
        title: 'API Development',
        description:
          'Entwicklung und Integration von RESTful APIs und Microservices.',
        icon: 'tabler:api',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Modern & Skalierbar',
        description:
          'Unsere Softwarelösungen basieren auf modernsten Technologien und sind hochskalierbar.',
      },
      {
        title: 'Qualitätssicherung',
        description:
          'Umfassende Tests und Qualitätssicherung in allen Entwicklungsphasen.',
      },
      {
        title: 'Wartbar & Erweiterbar',
        description:
          'Clean Code und beste Praktiken für langfristig wartbare Software.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Software Development',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Moderne Softwareentwicklung</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    items={[
      {
        title: 'Expertise',
        description:
          'Erfahrenes Entwicklerteam mit umfassender technischer Expertise.',
      },
      {
        title: 'Agile Methoden',
        description:
          'Flexible Entwicklung mit Scrum und anderen agilen Methoden.',
      },
      {
        title: 'Technologie-Stack',
        description:
          'Einsatz modernster Technologien und Frameworks.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1553877522-43269d4ea984?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Modern Software',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Warum wir?</h3>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Unser Entwicklungsprozess"
    items={[
      {
        title: 'Anforderungsanalyse',
        description:
          'Detaillierte Analyse Ihrer Anforderungen und Geschäftsprozesse.',
        icon: 'tabler:search',
      },
      {
        title: 'Design & Architektur',
        description:
          'Entwicklung der technischen Architektur und des UI/UX Designs.',
        icon: 'tabler:template',
      },
      {
        title: 'Entwicklung',
        description:
          'Agile Entwicklung mit regelmäßigen Feedback-Schleifen.',
        icon: 'tabler:code',
      },
      {
        title: 'Testing & Deployment',
        description:
          'Umfassende Tests und professionelles Deployment.',
        icon: 'tabler:test-pipe',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Steps Software',
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Bereit für Ihre neue Softwarelösung?"
    subtitle="Kontaktieren Sie uns für ein unverbindliches Beratungsgespräch."
    actions={[
      {
        variant: 'primary',
        text: 'Kontakt aufnehmen',
        href: '/kontakt',
      },
    ]}
  />
</Layout>
